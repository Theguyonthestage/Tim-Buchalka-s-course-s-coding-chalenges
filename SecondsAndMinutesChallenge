public class Main {
    public static void main(String[] args) {
        System.out.println(getDutationString(61,0));
        System.out.println(getDutationString(36000));
    }

    public static String getDutationString(int minutes, int seconds) {
        if (minutes < 0 || seconds < 0 || seconds > 59) {
            return "Invalid value";
        }
        int hours = minutes / 60;
        int secondsToMinutes = seconds / 60;
        int remainderMinutes = (secondsToMinutes + minutes) % 60;

        int remainderSeconds = seconds % 60;

        return hours + "h " + remainderMinutes + "m " + remainderSeconds + "s";
    }

    public static String getDutationString(int seconds) {
        if (seconds < 0) {
            return "Invalid value";
        }

        int minutes = seconds / 60;
        int remainderSeconds = seconds % 60;
        return getDutationString( minutes, remainderSeconds);
    }

}
